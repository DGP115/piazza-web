{
  "name": "app",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.27.2"
  },
  "scripts": {
    "build:css": "sass app/assets/stylesheets/application.bulma.scss:app/assets/builds/application.css --no-source-map --load-path=node_modules --quiet-deps",
    "build:js": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds",
    "build": "yarn build:css && yarn build:js"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.21",
    "bulma": "^1.0.4",
    "sass": "^1.97.2"
  }
}
