<% content_for :title, Current.user.name %>

<%= turbo_frame_tag "user_profile" do %>
  <div class="columns is-centered">
    <div class="column box is-5 mt-6 p-5 m-4">

      <h3 class="subtitle is-3 has-text-centered">
        <%= t(".your_profile") %>
      </h3>

      <%= form_with(
            model: @user,
            url: profile_path,
            class:"is-flex is-flex-direction-column") do |form| %>

        <div class="block">
          <%= form.label :name, class: "label" %>
          <%= form.text_field :name, class: "input" %>
        </div>

        <div class="block">
          <%= form.label :email, class: "label" %>
          <%= form.email_field :email, class: "input" %>
        </div>

        <%= form.submit t(".save_profile"), 
            class: "button is-primary is-align-self-flex-end mb-3 mt-3" %>

        <%= render partial: "application/flash_messages" if turbo_frame_request? %>

      <% end %>

    </div>
  </div>

  <!--turbo_stream is used to update username in navbar -->
  <%= turbo_stream.update "current_user_name" do %>
    <%= Current.user.name %>
  <% end %>
<% end %>

<%= turbo_frame_tag "change_password" do %>
  <div class="columns is-centered">
    <div class="column box is-5 mt-6 p-5 m-4">
      <h3 class="subtitle is-3 has-text-centered">
        <%= t(".change_password") %>
      </h3>

      <%= form_with(
            model: @user,
            url: users_change_password_path,
            class:"is-flex is-flex-direction-column") do |form| %>

        <div class="block">
          <%= form.label :password_challenge, value: t(".current_password"), class: "label" %>
          <%= form.password_field :password_challenge, class: "input" %>
        </div>

        <div class="block">
          <%= form.label :password, value: t(".new_password"), class: "label" %>
          <%= form.password_field :password, class: "input" %>
        </div>

        <%= form.submit t(".change_password_button"), 
            class: "button is-primary is-align-self-flex-end mb-3 mt-3" %>

        <%= render partial: "application/flash_messages" if turbo_frame_request? %>

      <% end %>

    </div>
  </div>
<% end %>
